<?xml version="1.0" encoding="utf-8" ?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="100dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title Poster"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPoster"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_star"
            app:layout_constraintLeft_toRightOf="@id/ivPoster"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <TextView
            android:id="@+id/tvTextRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Rating"
            app:layout_constraintBottom_toBottomOf="@id/ivStar"
            app:layout_constraintLeft_toRightOf="@id/ivStar"
            app:layout_constraintTop_toTopOf="@id/ivStar" />

        <TextView
            android:id="@+id/tvAngkaRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="7.8"
            app:layout_constraintBottom_toBottomOf="@id/tvTextRating"
            app:layout_constraintLeft_toRightOf="@id/tvTextRating"
            app:layout_constraintTop_toTopOf="@id/tvTextRating" />

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="148dp"
            android:text="Overview"
            app:layout_constraintLeft_toRightOf="@id/ivPoster"
            app:layout_constraintTop_toBottomOf="@id/ivStar" />

        <TextView
            android:id="@+id/tvPopularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="7.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tvTextPopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Popularity"
            app:layout_constraintBottom_toBottomOf="@id/tvPopularity"
            app:layout_constraintRight_toLeftOf="@id/tvPopularity"
            app:layout_constraintTop_toTopOf="@id/tvPopularity" />

        <ImageView
            android:id="@+id/ivApi"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="70dp"
            android:src="@drawable/ic_popularity"
            app:layout_constraintBottom_toBottomOf="@id/tvPopularity"
            app:layout_constraintRight_toLeftOf="@id/tvPopularity"
            />

        <TextView
            android:id="@+id/tvRealeased"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Realeased"
            app:layout_constraintBottom_toBottomOf="@id/tvPopularity"
            app:layout_constraintLeft_toRightOf="@id/ivPoster"
            app:layout_constraintTop_toTopOf="@id/tvPopularity" />

        <ImageView
            android:id="@+id/ivArrowright"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="39dp"
            android:layout_marginBottom="45dp"
            android:src="@drawable/ic_arrowright"
            app:layout_constraintBottom_toTopOf="@id/tvPopularity"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="View Details"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivArrowright" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>